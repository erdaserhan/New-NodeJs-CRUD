<%- include("header.ejs") -%>

    <main>
        <h1><%= title %></h1>
        <form action="/messages/update/<%= donnees.id %>" method="post">
            <input type="hidden" name="id" value="<%= donnees.id %>">
            <label for="nom">Votre nom :</label><br>
            <input type="text" name="nom" id="nom" required maxlength="50" value="<%= donnees.nom %>"><br>
            <br>
            <label for="msg">Votre message :</label><br>
            <input type="text" name="msg" id="msg" required maxlength="500" value="<%= donnees.message %>"><br>
            <br>
            <br>
            <input type="submit" value="Mettre à jour les données">
        </form>
    </main>

<%- include("footer.ejs") -%>